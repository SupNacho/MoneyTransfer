<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data class = "NewCardBinding">
        <variable
            name="cardModel"
            type="ru.supernacho.tkb.tz.moneytransfer.viewmodel.CardViewModel"/>
    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_card_number"
        app:layout_constraintWidth_percent="0.58"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/til_exp_date">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@={cardModel.cardNumber}"
            setError="@{cardModel.cardNumber}"
            android:hint="@string/card_num_card_view"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_exp_date"
        app:layout_constraintWidth_percent="0.18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/til_new_card_number"
        app:layout_constraintRight_toLeftOf="@id/til_cvv">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_exp_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="@={cardModel.expDate}"
            setError="@{cardModel.expDate}"
            android:hint="@string/date_hint_card_view"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_cvv"
        app:layout_constraintWidth_percent="0.18"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/til_exp_date"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:maxLength="3"
            android:text="@={cardModel.cVv}"
            setError="@{cardModel.cVv}"
            android:hint="@string/cvv_card_view"/>
    </android.support.design.widget.TextInputLayout>
</android.support.constraint.ConstraintLayout>
</layout>